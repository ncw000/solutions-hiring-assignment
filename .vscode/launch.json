    "version": "0.2.0",
    "configurations": [
    {
        "type": "node",
        "request": "launch",
        "name": "Gulp watch",
        "cwd": "${workspaceRoot}",
        "program": "${workspaceRoot}/node_modules/gulp/bin/gulp.js",
        "args": [
            "watch"
        ]
    },
        {
            "type": "node",
            "request": "launch",
            "name": "Gulp merge-data",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/node_modules/gulp/bin/gulp.js",
            "args": [
                "merge-data"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}\\index.html",
            "cwd": "${workspaceRoot}"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "port": 5858
        }
    ]
}